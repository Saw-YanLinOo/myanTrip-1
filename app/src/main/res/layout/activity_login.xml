<?xml version="1.0" encoding="utf-8"?>
<com.vmyan.myantrip.view.KeyboardAwareScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.Login">

        <ImageView
            android:id="@+id/instagram_image"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_blog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


            <EditText
                android:id="@+id/email_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/big_input"
                android:background="@drawable/big_input_bg"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@+id/instagram_image"/>

            <EditText
                android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Password"
                style="@style/big_input"
                android:background="@drawable/big_input_bg"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@+id/email_input"/>

        <Button
            android:id="@+id/login_btn"
            style="@style/big_button"
            android:text="Log In"
            app:layout_constraintBottom_toTopOf="@+id/skip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password_input"
            app:layout_constraintVertical_bias="0.11" />

        <TextView
            android:id="@+id/create_account_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account.."
            app:layout_constraintBottom_toTopOf="@+id/skip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_btn"
            app:layout_constraintVertical_bias="0.055" />

        <TextView
            android:id="@+id/skip"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/top_border_grey"
            android:gravity="center"
            android:text="Skip"
            app:layout_constraintBottom_toBottomOf="parent" />
        <com.github.ybq.android.spinkit.SpinKitView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/spin_kit"
            style="@style/SpinKitView.Large.ChasingDots"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/colorAccent"
            android:background="#fff"
            android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.vmyan.myantrip.view.KeyboardAwareScrollView>