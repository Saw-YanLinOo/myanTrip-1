<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="8dp"
            android:weightSum="2">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/hotelImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        android:layout_weight="1.2"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="0.8"
        android:paddingLeft="10dp"
        android:paddingTop="7dp"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/hotelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hotel Name"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/hotelLocation"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="10sp"
            android:layout_below="@id/hotelName"
            android:paddingLeft="10dp"
            />
        <LinearLayout
            android:id="@+id/llWifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hotelLocation"
            android:layout_marginTop="5dp"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@mipmap/ic_launcher"
                android:layout_gravity="center"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/wifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wifi"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llBreakFast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llWifi"
            android:layout_marginTop="5dp"

            >
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@mipmap/ic_launcher"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/bf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BreakFast"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llCarPack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llBreakFast"
            android:layout_marginTop="5dp"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@mipmap/ic_launcher"
                android:layout_gravity="center"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/carPack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CarPack"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llWaterPool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llCarPack"
            android:layout_marginTop="5dp"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@mipmap/ic_launcher"
                android:layout_gravity="center"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/waterPool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Water Pool"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llRestaurant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llWaterPool"
            android:layout_marginTop="5dp"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@mipmap/ic_launcher"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/restaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rastaurant"
                android:layout_gravity="center"
                android:textSize="12sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_below="@id/llRestaurant"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:orientation="horizontal"
                >
                <androidx.appcompat.widget.AppCompatTextView

                    android:id="@+id/hotel_rating_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="4.5"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#000" />
                <com.willy.ratingbar.RotationRatingBar
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/hotel_rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:paddingRight="2dp"
                    app:srb_numStars="5"
                    app:srb_minimumStars="1"
                    app:srb_rating="3.5"
                    app:srb_starWidth="15dp"
                    app:srb_starHeight="10dp"
                    app:srb_stepSize="0.5"
                    app:srb_starPadding="3dp"
                    app:srb_isIndicator="false"
                    app:srb_clickable="false"
                    app:srb_scrollable="false"
                    app:srb_clearRatingEnabled="false"
                    app:srb_drawableEmpty="@drawable/ic_star_outline"
                    app:srb_drawableFilled="@drawable/ic_star">
                </com.willy.ratingbar.RotationRatingBar>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Starting From"
                    android:textSize="8sp"
                    android:layout_marginLeft="5dp"
                    android:gravity=""
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/room_lowestPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20000"
                    android:textSize="12sp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="3dp"
                    />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MMK"
                        android:textSize="10sp"
                        android:gravity="right|center"
                        />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>






    </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>