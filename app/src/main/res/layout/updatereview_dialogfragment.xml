<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    tools:context=".ui.fragment.FilterDialogFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/review_toolbar"
        android:background="#ffffff">
        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:id="@+id/ra_backbtn_ly"
            android:background="@drawable/nav_menu_btn_bg">
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ra_backbtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_back_arrow"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Yoe Yoe Lay"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="#000000"
                android:id="@+id/ra_name"
                android:layout_gravity="center_horizontal"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate this place"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                tools:src="@drawable/profile"
                android:scaleType="fitXY"
                android:id="@+id/ra_mainImg"/>
        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/review_toolbar"
        android:layout_marginTop="20dp">
        <com.willy.ratingbar.RotationRatingBar
            android:id="@+id/add_rval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:srb_numStars="5"
            app:srb_minimumStars="0"
            app:srb_rating="0"
            app:srb_starWidth="30dp"
            app:srb_starHeight="30dp"
            app:srb_stepSize="0.5"
            app:srb_starPadding="3dp"
            app:srb_isIndicator="false"
            app:srb_clickable="true"
            app:srb_scrollable="false"
            app:srb_clearRatingEnabled="false"
            app:srb_drawableEmpty="@drawable/ic_star_outline"
            app:srb_drawableFilled="@drawable/ic_star">
        </com.willy.ratingbar.RotationRatingBar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inly"
            android:layout_margin="20dp"
            android:layout_below="@id/add_rval"
            android:background="@drawable/review_input_bg">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/desc_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:hint="Describe your review to all"
                android:minLines="5"
                android:layout_centerVertical="true"
                android:background="@null"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:layout_below="@id/inly">
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/nav_menu_btn_bg"
                android:layout_below="@id/inly"
                android:layout_margin="20dp"
                android:id="@+id/cancel_btn_ly">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/cancel_btn"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/nav_menu_btn_bg"
                android:layout_below="@id/inly"
                android:layout_margin="20dp"
                android:id="@+id/post_btn_ly">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/post_btn"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>