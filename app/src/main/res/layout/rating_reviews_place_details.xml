<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/l1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/yourreview_ly"
            android:visibility="gone">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Review"
                android:id="@+id/yourreview_title"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="#000000"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/yourreview_title"
                android:id="@+id/yourreview_pro_ly"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/yourreview_userimg"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/profile"
                        android:layout_gravity="center_vertical"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="20dp">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/yourreview_username"
                            android:text="Phyo Thura Oo"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:textSize="18sp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="7dp">
                            <com.willy.ratingbar.RotationRatingBar
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/yourreview_ratingbar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srb_numStars="5"
                                app:srb_minimumStars="1"
                                app:srb_rating="3.5"
                                app:srb_starWidth="15dp"
                                app:srb_starHeight="15dp"
                                app:srb_stepSize="0.5"
                                app:srb_starPadding="3dp"
                                app:srb_isIndicator="false"
                                app:srb_clickable="false"
                                app:srb_scrollable="false"
                                app:srb_clearRatingEnabled="false"
                                app:srb_drawableEmpty="@drawable/ic_star_outline"
                                app:srb_drawableFilled="@drawable/ic_star">
                            </com.willy.ratingbar.RotationRatingBar>
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/yourreview_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="13/08/2020"
                                android:layout_marginStart="10dp"
                                android:textSize="16sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/yourreview_menu_ly">
                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/yourreview_menu_btn"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_open_menu"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </RelativeLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Review Description"
                android:id="@+id/yourreview_desc"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_below="@id/yourreview_pro_ly"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="10dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ratethisapp_ly"
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_margin="20dp">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate this place"
                android:textSize="23sp"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tell others what you think"
                android:textSize="16sp"/>

            <com.willy.ratingbar.RotationRatingBar
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:srb_numStars="5"
                app:srb_minimumStars="0"
                app:srb_rating="0"
                app:srb_starWidth="30dp"
                app:srb_starHeight="30dp"
                app:srb_stepSize="0.5"
                app:srb_starPadding="3dp"
                app:srb_isIndicator="false"
                app:srb_clickable="true"
                app:srb_scrollable="false"
                app:srb_clearRatingEnabled="false"
                app:srb_drawableEmpty="@drawable/ic_star_outline"
                app:srb_drawableFilled="@drawable/ic_star">
            </com.willy.ratingbar.RotationRatingBar>

        </LinearLayout>
    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write a review"
        android:textAllCaps="false"
        android:id="@+id/write_review_btn"
        android:textColor="@color/bottom_nav_select"
        android:layout_below="@id/l1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:cornerRadius="15dp"
        android:textSize="16sp"
        android:textStyle="bold"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ratings &amp; Reviews"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_below="@id/write_review_btn"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:id="@+id/rev_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/review_chart"
        android:layout_below="@id/rev_title"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/avg_review_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="4.7"
                android:textStyle="bold"
                android:textSize="40sp"
                android:textColor="#000000"/>
            <com.willy.ratingbar.RotationRatingBar
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/avg_review_bar"
                app:srb_numStars="5"
                app:srb_minimumStars="0"
                app:srb_rating="4.7"
                app:srb_starWidth="20dp"
                app:srb_starHeight="20dp"
                app:srb_stepSize="0.5"
                app:srb_starPadding="3dp"
                app:srb_isIndicator="false"
                app:srb_clickable="false"
                app:srb_scrollable="false"
                app:srb_clearRatingEnabled="false"
                app:srb_drawableEmpty="@drawable/ic_star_outline"
                app:srb_drawableFilled="@drawable/ic_star">
            </com.willy.ratingbar.RotationRatingBar>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/totalreview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="756, 800"
                android:textSize="20sp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ic_star"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="3dp"
                    android:layout_gravity="center_vertical"/>
                <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
                    android:layout_width="160dp"
                    android:layout_height="18dp"
                    android:id="@+id/avg_review_five"
                    android:layout_gravity="center_vertical"
                    app:rcBackgroundColor="#ddd"
                    app:rcBackgroundPadding="0dp"
                    android:layout_marginStart="5dp"
                    app:rcMax="100"
                    app:rcTextProgressSize="14sp"
                    app:rcProgress="100"
                    app:rcProgressColor="@color/bottom_nav_select"
                    app:rcRadius="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ic_star"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="3dp"
                    android:layout_gravity="center_vertical"/>
                <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
                    android:layout_width="160dp"
                    android:layout_height="18dp"
                    android:id="@+id/avg_review_four"
                    android:layout_gravity="center_vertical"
                    app:rcBackgroundColor="#ddd"
                    app:rcBackgroundPadding="0dp"
                    android:layout_marginStart="5dp"
                    app:rcMax="100"
                    app:rcTextProgressSize="14sp"
                    app:rcProgress="80"
                    app:rcProgressColor="@color/bottom_nav_select"
                    app:rcRadius="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ic_star"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="3dp"
                    android:layout_gravity="center_vertical"/>
                <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
                    android:layout_width="160dp"
                    android:layout_height="18dp"
                    android:id="@+id/avg_review_three"
                    android:layout_gravity="center_vertical"
                    app:rcBackgroundColor="#ddd"
                    app:rcBackgroundPadding="0dp"
                    android:layout_marginStart="5dp"
                    app:rcMax="100"
                    app:rcTextProgressSize="14sp"
                    app:rcProgress="60"
                    app:rcProgressColor="@color/bottom_nav_select"
                    app:rcRadius="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ic_star"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="3dp"
                    android:layout_gravity="center_vertical"/>
                <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
                    android:layout_width="160dp"
                    android:layout_height="18dp"
                    android:id="@+id/avg_review_two"
                    android:layout_gravity="center_vertical"
                    app:rcBackgroundColor="#ddd"
                    app:rcBackgroundPadding="0dp"
                    android:layout_marginStart="5dp"
                    app:rcMax="100"
                    app:rcTextProgressSize="14sp"
                    app:rcProgress="40"
                    app:rcProgressColor="@color/bottom_nav_select"
                    app:rcRadius="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ic_star"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="3dp"
                    android:layout_gravity="center_vertical"/>
                <com.akexorcist.roundcornerprogressbar.TextRoundCornerProgressBar
                    android:layout_width="160dp"
                    android:layout_height="18dp"
                    android:id="@+id/avg_review_one"
                    android:layout_gravity="center_vertical"
                    app:rcBackgroundColor="#ddd"
                    app:rcBackgroundPadding="0dp"
                    android:layout_marginStart="5dp"
                    app:rcMax="100"
                    app:rcTextProgressSize="14sp"
                    app:rcProgress="20"
                    app:rcProgressColor="@color/bottom_nav_select"
                    app:rcRadius="20dp" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/review_recycler_litmit"
        android:layout_below="@id/review_chart"
        android:layout_marginTop="10dp"
        tools:listitem="@layout/review_item_layout"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/viewalluserreview_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:text="View All Users Reviews"
        android:layout_below="@id/review_recycler_litmit"
        android:textSize="16sp"
        android:textColor="@color/bottom_nav_select"
        android:textStyle="bold"
        android:textAllCaps="false"
        app:cornerRadius="15dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

</RelativeLayout>