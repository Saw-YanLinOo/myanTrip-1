<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardElevation="20dp"
        android:layout_width="200dp"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_auto_place_slider"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitXY" />
            <TextView
                android:id="@+id/tv_place_name_post"
                android:layout_toRightOf="@id/iv_auto_place_slider"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place Name(Category)"
                android:maxLength="15"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/tv_place_address_post"
                android:layout_toRightOf="@id/iv_auto_place_slider"
                android:layout_below="@id/tv_place_name_post"
                android:text="Address"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="30"
                android:ellipsize="end"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>