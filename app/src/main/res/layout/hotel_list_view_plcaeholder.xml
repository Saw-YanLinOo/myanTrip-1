<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="2">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/hotelImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:background="#dddd"
                android:layout_weight="1.2"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="0.8"
                android:paddingLeft="10dp"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/hotelName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#dddd"
                    android:textSize="20sp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/hotelLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#dddd"
                    android:textSize="10sp"
                    android:layout_below="@id/hotelName"
                    android:paddingLeft="10dp"
                    />
                <LinearLayout
                    android:id="@+id/llWifi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hotelLocation"
                    android:layout_marginTop="5dp"
                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="#dddd"
                        android:layout_gravity="center"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/wifi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#dddd"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llBreakFast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llWifi"
                    android:layout_marginTop="5dp"

                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:background="#dddd"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/bf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#dddd"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llCarPack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llBreakFast"
                    android:layout_marginTop="5dp"
                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="#dddd"
                        android:layout_gravity="center"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/carPack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#dddd"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llWaterPool"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llCarPack"
                    android:layout_marginTop="5dp"
                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="#dddd"
                        android:layout_gravity="center"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/waterPool"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#dddd"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llRestaurant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llWaterPool"
                    android:layout_marginTop="5dp"
                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:background="#dddd"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/restaurant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#dddd"
                        android:layout_gravity="center"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_below="@id/llRestaurant"
                    android:gravity="center"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:orientation="horizontal"
                        >
                        <androidx.appcompat.widget.AppCompatTextView

                            android:id="@+id/hotel_rating_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="#dddd"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#000" />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#dddd"
                         />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="#dddd"
                        >
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="8sp"
                            android:layout_marginLeft="20dp"
                            android:gravity=""
                            />
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/room_lowestPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:layout_gravity="right"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="10dp"
                            />


                    </LinearLayout>

                </LinearLayout>






            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>