<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="10dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="#D6D2D2"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/roomStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#dddd"
                android:textSize="25sp"
                android:layout_margin="5dp"
                android:textStyle="bold"

                />
            <LinearLayout
                android:id="@+id/llRoomWifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="#dddd"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/roomWifi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#dddd"
                    android:layout_marginLeft="8dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/llRoomWithToilet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="#dddd"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/haveBathwithTiilet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#dddd"
                    android:layout_marginLeft="8dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llroomAirCon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="#dddd"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/roomAirCon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#dddd"
                    android:layout_marginLeft="8dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="0.7"
                    >
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtRateForOneNight"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:background="#dddd"
                        android:textSize="8sp"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/mmk"
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_below="@id/txtRateForOneNight"
                        android:background="#dddd"
                        android:textSize="18sp"
                        android:layout_marginLeft="8dp"
                        android:gravity="left|center"

                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/roomPrice"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_below="@id/txtRateForOneNight"
                        android:layout_toRightOf="@id/mmk"
                        android:layout_marginLeft="10dp"
                        android:gravity="left|center"
                        android:textSize="18sp"
                        android:background="#dddd"
                        />

                </RelativeLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/roomReserve"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1.3"
                    android:background="#dddd"
                    android:elevation="10dp"
                    android:paddingLeft="5dp"
                    >
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#dddd"
                        android:layout_gravity="center"
                        android:gravity="center"
                        />

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>