<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/r_ly"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/review_userimg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/profile"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/review_username"
                    android:text="Phyo Thura Oo"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="18sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp">
                    <com.willy.ratingbar.RotationRatingBar
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/review_userratingbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srb_numStars="5"
                        app:srb_minimumStars="1"
                        app:srb_rating="3.5"
                        app:srb_starWidth="15dp"
                        app:srb_starHeight="15dp"
                        app:srb_stepSize="0.5"
                        app:srb_starPadding="3dp"
                        app:srb_isIndicator="false"
                        app:srb_clickable="false"
                        app:srb_scrollable="false"
                        app:srb_clearRatingEnabled="false"
                        app:srb_drawableEmpty="@drawable/ic_star_outline"
                        app:srb_drawableFilled="@drawable/ic_star">
                    </com.willy.ratingbar.RotationRatingBar>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/review_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13/08/2020"
                        android:layout_marginStart="10dp"
                        android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:id="@+id/review_menu_btn_ly">
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/review_menu_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_open_menu"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review Description"
        android:id="@+id/review_desc"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_below="@id/r_ly"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="10dp" />

</RelativeLayout>