            android:name=".ui.Profile"
            android:theme="@style/AppTheme.ProfileTheme" />
        <activity android:name=".ui.PlaceDetailsActivity" />
        <activity android:name=".ui.SearchPlaceActivity" />
        <activity android:name=".ui.PlaceByCategoryActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_map_key" />

        <activity
            android:name=".ui.MainActivity"
            android:theme="@style/MainActivityTheme" />
        <activity
            android:name=".ui.Register"
            android:theme="@style/AppTheme.ProfileTheme" />
        <activity
